# Hollywood Script Generator - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Hollywood Script Generator
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Server Configuration
# =============================================================================
HOST=127.0.0.1
PORT=8000

# =============================================================================
# Video Configuration
# =============================================================================
# Directory containing MP4 video files to process
VIDEO_DIR=/path/to/your/videos

# Chunk configuration for scene detection
CHUNK_DURATION_SECONDS=30
CHUNK_OVERLAP_SECONDS=5

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database URL (default: sqlite:///./data/hollywood.db)
DATABASE_URL=sqlite+aiosqlite:///./data/hollywood.db

# =============================================================================
# LLM Configuration (Ollama)
# =============================================================================
# Ollama API base URL
LLM_BASE_URL=http://localhost:11434/v1

# Model to use for script generation
LLM_MODEL=llama3.1:70b

# Temperature for generation (0.0-1.0, lower = more deterministic)
LLM_TEMPERATURE=0.7

# Max tokens for generation
LLM_MAX_TOKENS=4096

# =============================================================================
# Whisper Configuration
# =============================================================================
# Whisper model size: tiny, base, small, medium, large
WHISPER_MODEL=base

# Device to use: cpu, cuda
WHISPER_DEVICE=cpu

# =============================================================================
# Video Processing Configuration
# =============================================================================
# Black frame detection threshold (0-255, lower = darker)
BLACK_FRAME_THRESHOLD=20

# Minimum duration of black frames to consider as credits/ads (seconds)
BLACK_FRAME_MIN_DURATION=2.0

# Silence detection threshold (dB, lower = quieter)
SILENCE_THRESHOLD=-40

# Minimum duration of silence to consider as credits/ads (seconds)
SILENCE_MIN_DURATION=3.0

# =============================================================================
# Job Processing Configuration
# =============================================================================
# Maximum concurrent jobs
MAX_CONCURRENT_JOBS=2

# Job timeout (seconds)
JOB_TIMEOUT=3600

# =============================================================================
# Output Configuration
# =============================================================================
# Directory for generated scripts
OUTPUT_DIR=./output

# =============================================================================
# Testing Configuration
# =============================================================================
# Test database URL
TEST_DATABASE_URL=sqlite+aiosqlite:///./data/test.db

# E2E test base URL
E2E_BASE_URL=http://127.0.0.1:8000
