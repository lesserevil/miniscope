# Telegram Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Telegram bot token from @BotFather
# Get it from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Required: Comma-separated list of allowed chat IDs
# Only these users can interact with the bot
# Get your chat ID by messaging @userinfobot
CHAT_ID_WHITELIST=123456789,987654321

# Optional: Debug mode (default: false)
# Set to true for verbose logging
DEBUG=false

# Optional: Log level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Conversation retention in days (default: 30)
# Conversations older than this are archived
CONVERSATION_RETENTION_DAYS=30

# Optional: Enable bookmark skill (default: true)
ENABLE_BOOKMARK_SKILL=true

# Optional: Database file path (default: auntie.db)
DATABASE_PATH=auntie.db
